<!-- registro -->
<div class="col s12 m6">
	<form action="/registro" method="POST" id="registro">
		<div class="card blue-grey darken-1">
			<div class="card-content white-text">
				<span class="card-title">Registro</span>
				<div class="input-field">
					<input name="correo" id="correo_registro" type="email" class="validate" required />
					<label for="correo_registro">Correo</label>
				</div>

				<div class="input-field">
					<input name="usuario" id="user_registro" type="text" class="validate" required />
					<label for="user_registro">usuario</label>
				</div>
				<div class="input-field">
					<input name="clave" id="clave_registro" type="password" class="validate" required />
					<label for="clave_registro">clave</label>
				</div>
				<div class="input-field">
					<input name="confir_clave" id="confir_clave" type="password" class="validate" required />
					<label for="confir_clave">clave</label>
				</div>
				<div class="input-field row">
					<a class="waves-effect waves-light btn modal-trigger col s12" href="#contrato">Leer condicones de uso</a>
				</div>
				<div class="switch">
					<label>
						Off
						<input type="checkbox" required />
						<span class="lever"></span>
						On
					</label>
				</div>
			</div>
			<div class="card-action">
				<button class="btn waves-effect waves-light right" type="submit" name="action" id="registroEnvio">
					Submit
					<i class="material-icons right">send</i>
				</button>
			</div>
		</div>
	</form>
	<div id="contrato" class="modal modal-fixed-footer">
		<div class="modal-content">
			<h4>Modal Header</h4>
			<p>A bunch of text</p>
		</div>
		<div class="modal-footer">
			<a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a>
		</div>
	</div>
</div>
