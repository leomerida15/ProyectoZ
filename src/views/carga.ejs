<!-- Modal Trigger -->
<div class="container">
	<% value=0%> <% images.forEach( image => { %><% mensajes=image.datos%>
	<div id="<%=image.name%>" class="modal modal-fixed-footer">
		<div class="modal-content row">
			<div class="col s12 m8">
				<img src="img/<%=image.ubicacion%>" class="responsive-img materialboxed" alt="" />
			</div>
			<div class="col s12 m4">
				<div class="section">
					<table>
						<thead>
							<tr>
								<th></th>
							</tr>
						</thead>

						<tbody>
							<tr>
								<td>
									<a class="light-blue darken-4 waves-effect waves-light btn small col s12"><i class="material-icons right">add_shopping_cart</i>Carrito</a>
								</td>
							</tr>
							<tr>
								<td>
									<a class="light-blue darken-4 waves-effect waves-light btn small col s12"><i class="material-icons right">file_download</i>Gratis</a>
								</td>
							</tr>
							<tr>
								<td>
									<a class="btn-floating btn-large waves-effect waves-light light-blue lighten-1 tooltipped" data-position="bottom" data-tooltip="Buscar"><i class="material-icons">thumb_up</i></a>
									<a class="btn-floating btn-large waves-effect waves-light red lighten-1 tooltipped" data-position="bottom" data-tooltip="Buscar"><i class="material-icons">thumb_down</i></a>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
			<div class="col s12">
				<form action="" method="POST" id="mensaje<%=value%>">
					<div class="card blue-grey darken-1 container">
						<div class="card-content white-text row">
							<input class="white-text" type="text" value="<%=user.usuario%>" disabled />
							<input class="white-text hide" type="text" value="<%=user.usuario%>" name="usuario_mensaje" />
							<input class="white-text hide" type="text" value="<%=image.name%>" name="name_img" />
							<div class="col s10">
								<input id="input_text" type="text" name="contenido_mensaje" data-length="250" required />
								<label for="input_text">Input text</label>
							</div>
							<div class="col s2">
								<button class="btn-floating btn-large waves-effect waves-light right" type="submit">
									<i class="material-icons right">send</i>
								</button>
							</div>
						</div>
					</div>
				</form>
				<div class="card blue-grey darken-1 container">
					<div id="box_email<%=value%>">
						<% mensajes.forEach( mensaje => { %>

						<div class="card-content white-text row">
							<div class="col s3">
								<i class="material-icons prefix col s3">face</i>
								<p class="col s9"><%= mensaje.mensaje%></p>
							</div>
							<div class="col s9">
								<p><%= mensaje.mensaje%></p>
							</div>
						</div>

						<%}) %>
					</div>
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">cerrar</a>
		</div>
	</div>
	<% value=value+1%> <% }) %>
</div>
